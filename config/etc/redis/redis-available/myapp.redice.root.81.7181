pidfile "/var/run/redis-production/myapp.redice.root.81.7181.pid"
daemonize yes

port 7181
bind 127.0.0.1 10.0.0.8

#tcp-backlog 32
timeout 0
tcp-keepalive 60

loglevel notice
logfile "/var/log/redis/myapp.redice.root.81.7181.log"

databases 1

save 900 1
save 300 100
save 60 10000

stop-writes-on-bgsave-error yes

rdbcompression yes
rdbchecksum no
dir "/var/lib/redis/myapp"
dbfilename "myapp.redice.root.81.7181.dump.rdb"

slave-serve-stale-data yes

repl-diskless-sync no
repl-diskless-sync-delay 5
repl-ping-slave-period 5
repl-timeout 30
repl-disable-tcp-nodelay no

repl-backlog-size 1mb
repl-backlog-ttl 900

slave-priority 100
min-slaves-to-write 1
min-slaves-max-lag 5

maxclients 64
maxmemory 5mb
maxmemory-policy noeviction
maxmemory-samples 3

lua-time-limit 1000
slowlog-log-slower-than 3000
slowlog-max-len 128

latency-monitor-threshold 3000

activerehashing no
hz 10
