pidfile /var/run/redis-sentinel/sentinel.myapp.redice.1.7201.pid
daemonize yes

port 7201
bind 127.0.0.1 10.0.0.8

loglevel notice
logfile /var/log/redis/sentinel.myapp.redice.1.7201.log

# monitor указывает на мастер, который мониторим
# monitor <имя кластера> <адрес хоста мастера> <порт мастера> <quorum>
# quorum - минимальное число голосов стражей необходимое для принятия
# решения что мастер сдох
sentinel monitor redis-root 10.0.0.8 7181 2

# максимально допустимое время не прохождения пингов от мастера в мс
# по истечении этого времни страж будет считать мастер в состоянии SDOWN
# (субъективно мертвый)
# состояние ODOWN (объективно труп) может достигатся при голосовании всех стражей
# указанных в quorum
sentinel down-after-milliseconds redice-root 5000

# сколько slave будут одновремненно настроены на новый мастер после падения
# slave в процессе настройки на новый мастер - не доступен, при значении 1
# процесс перехода будет по одному, при этом slave которые еще не перешли на новый
# master будут отдавать устаревшие данные
sentinel parallel-syncs redis-root 1

# я так понял есть понятие версионирование конфигураций стражей (эпохи состояния кластера)
# тут задается таймаут которые стражи будут ждать не предпринимая ни каких действий по 
# выбору нового мастера в момент когда идет переход на новую версию эпохи
sentinel failover-timeout redis-cluster 10000

